def konverter_kecepatan():
    # Daftar satuan kecepatan yang didukung
    satuan_list = ['m/s', 'km/h', 'mph', 'knot', 'mach']
    # Faktor konversi dari setiap satuan ke m/s
    konversi_ke_ms = [1, 1/3.6, 0.44704, 0.514444, 343]

    # Mencetak header program
    print("=" * 40)
    print(" Konverter Satuan Kecepatan")
    print("=" * 40)

    # Menampilkan pilihan satuan yang tersedia
    print("Pilihan satuan:")
    for i, satuan in enumerate(satuan_list, 1):
        print(f"{i}. {satuan}")
    print("=" * 40)

    try:
        # Meminta input nilai kecepatan dari pengguna
        nilai = float(input("Masukkan nilai kecepatan: "))

        # Menampilkan pilihan satuan asal
        print("Pilih satuan asal:")
        for i, satuan in enumerate(satuan_list, 1):
            print(f"{i}. {satuan}")
        pilihan_asal = int(input("Masukkan nomor pilihan: "))

        # Validasi pilihan satuan asal
        if pilihan_asal < 1 or pilihan_asal > len(satuan_list):
            raise ValueError("Pilihan tidak valid")

        # Mengambil satuan asal dan faktor konversi yang sesuai
        satuan_asal = satuan_list[pilihan_asal - 1]
        faktor_konversi = konversi_ke_ms[pilihan_asal - 1]

        # Konversi nilai input ke m/s sebagai satuan dasar
        base = nilai * faktor_konversi

        # Menghitung konversi ke semua satuan
        hasil = {}
        for i, satuan in enumerate(satuan_list):
            hasil[satuan] = base / konversi_ke_ms[i]

        # Menampilkan hasil konversi
        print("\nHasil Konversi:")
        print("=" * 40)
        print(f"{'Satuan':<10} {'Nilai':>15}")
        print("=" * 40)
        for satuan, nilai in hasil.items():
            print(f"{satuan:<10} {nilai:>15.4f}")
        print("=" * 40)

    except ValueError as e:
        # Menangani kesalahan input nilai atau pilihan yang tidak valid
        print(f"Error: {e}")
    except Exception as e:
        # Menangani kesalahan umum lainnya
        print(f"Terjadi kesalahan: {e}")

# Menjalankan fungsi konverter kecepatan
konverter_kecepatan()

